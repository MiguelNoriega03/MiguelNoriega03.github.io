---
import { ClientRouter } from 'astro:transitions';
import BaseHead, { type Props as HeadProps } from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
import BackToTop from '../components/BackToTop.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';

export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
---

<!doctype html>
<html lang="es-MX" class="wrap-break-words antialiased">
    <head>
        <BaseHead {...head} />
        <script>
            if (localStorage.theme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        </script>
        <ClientRouter />
        <script is:inline src="/theme-toggle.js"></script>
    </head>
    <body class="bg-main text-main">
        <div class="flex min-h-screen flex-col px-4 md:px-8" style="padding-top:0;margin-top:0;">
            <Nav />
            {showHeader && <Header />}
            <main class="mx-auto w-full max-w-3xl grow" style="padding-top:0;margin-top:0;">
                <slot />
            </main>
            <Footer />
        </div>
        <BackToTop />
        <WhatsAppFloat />
        <ScrollReveal />
    </body>
</html>
