---
interface ImpactCard {
    icon: string;
    title: string;
    description: string;
    color: 'dark' | 'medium' | 'light';
}

interface Props {
    cards: ImpactCard[];
}

const { cards } = Astro.props;

const colorClasses = {
    dark: 'bg-emerald-900',
    medium: 'bg-emerald-700',
    light: 'bg-emerald-500'
};

const iconSvgs: Record<string, string> = {
    chart: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10">
        <path d="M3 3v18h18" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M7 16v-4M11 16v-8M15 16v-6M19 16v-10" stroke-linecap="round"/>
    </svg>`,
    speed: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10">
        <circle cx="12" cy="12" r="9"/>
        <path d="M12 7v5l3 3" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    growth: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10">
        <path d="M3 17l6-6 4 4 8-8" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M17 7h4v4" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    channels: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10">
        <path d="M12 2v6M12 16v6M4.93 4.93l4.24 4.24M14.83 14.83l4.24 4.24M2 12h6M16 12h6M4.93 19.07l4.24-4.24M14.83 9.17l4.24-4.24" stroke-linecap="round"/>
    </svg>`,
    star: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`
};
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 my-8 not-prose">
    {cards.map((card) => (
        <div class="flex flex-col items-center">
            <!-- Icon Circle -->
            <div class="w-20 h-20 rounded-full bg-white border-4 border-emerald-700 flex items-center justify-center -mb-10 z-10 text-emerald-700">
                <Fragment set:html={iconSvgs[card.icon] || iconSvgs.chart} />
            </div>
            <!-- Card -->
            <div class={`${colorClasses[card.color]} rounded-3xl pt-14 pb-8 px-6 text-center text-white w-full min-h-[200px] flex flex-col justify-center`}>
                <h3 class="text-2xl md:text-3xl font-bold mb-3">{card.title}</h3>
                <p class="text-sm md:text-base opacity-90 leading-relaxed">{card.description}</p>
            </div>
        </div>
    ))}
</div>
