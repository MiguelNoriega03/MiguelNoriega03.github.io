---
import { type CollectionEntry } from 'astro:content';

type Props = { project: CollectionEntry<'projects'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { project, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description } = project.data;
const TitleTag = headingLevel;
---

<a class:list={['group block', className]} href={`/projects/${project.id}/`}>
    <div class="flex items-start justify-between gap-4">
        <div class="grow">
            <TitleTag
                class="font-serif text-xl leading-tight font-semibold sm:text-2xl group-hover:text-red-600 transition-colors"
            >
                {title}
            </TitleTag>
            {description && <div class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-400">{description}</div>}
        </div>
        <div class="flex items-center gap-2 text-red-600 font-semibold text-sm shrink-0">
            <span class="hidden sm:inline">Ver Proceso</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
        </div>
    </div>
</a>
