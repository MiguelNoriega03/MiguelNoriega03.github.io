<style>
    @keyframes wa-ping {
        0% {
            transform: scale(1);
            opacity: 0.4;
        }
        70% {
            transform: scale(1.5);
            opacity: 0;
        }
        100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }
    .animate-wa-ping {
        animation: wa-ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
    }

    #whatsapp-float.is-visible {
        opacity: 1;
        transform: translateY(0);
        pointer-events: auto;
    }

    #whatsapp-float:hover #wa-tooltip {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    function initWhatsAppFloat() {
        const floatEl = document.getElementById('whatsapp-float');
        const floatLink = document.getElementById('wa-float-link');
        if (!floatEl || !floatLink) return;

        // Ocultar en la pÃ¡gina de contacto (ya tiene su propio formulario)
        if (window.location.pathname.startsWith('/tags')) {
            floatEl.style.display = 'none';
            return;
        }

        // Detectar TikTok â†’ redirigir al formulario
        const ua = navigator.userAgent || navigator.vendor || '';
        const isTikTok = /musical_ly|tiktok|bytedance/i.test(ua);
        if (isTikTok) {
            floatLink.setAttribute('href', '/tags');
            floatLink.removeAttribute('target');
            floatLink.removeAttribute('rel');
        }

        // Mostrar tras 2s o al primer scroll (lo que pase primero)
        let shown = false;
        function show() {
            if (shown) return;
            shown = true;
            floatEl.classList.add('is-visible');
        }

        setTimeout(show, 2000);
        window.addEventListener('scroll', () => {
            if (window.scrollY > 200) show();
        }, { passive: true });
    }

    initWhatsAppFloat();
    document.addEventListener('astro:after-swap', initWhatsAppFloat);
</script>
